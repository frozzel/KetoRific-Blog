<div class="row post">
  <div class="card text-bg-danger mb-3" style="max-width: 90%;">
  <div class="card-header">Edit Post</div>
  <div class="card-body">
    <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />
<div class="col-4">
    <label class="form-label" for="post-title">Title:</label><br>
    <input type="text" name="post-title" value="{{post.title}}" class="form-input" /><br>
  </div>
  <div class="col-4">
    <label class="form-label" for="post-body">Content</label><br>
    <textarea name="post-body" class="form-input">{{post.body}}</textarea>
</div>
<div class="col-4">
    <label class="form-label" for="post-image">Image</label><br>
    <textarea name="post-image" class="form-input" >{{post.image}}</textarea>
</div>
    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
  </div>
</div>
<script src="/js/update.js"></script>